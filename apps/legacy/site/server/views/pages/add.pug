extends ../layout

block content
  .add-product-page
    main
      .preview-button-box
        button#previewBtn.custom-btn.preview-btn Preview
      form#add-product-form.add-product-form(action="/user/add-product", method="POST",enctype="multipart/form-data")
        ul.add-product_list
          li
            p Add an image
              .add-product
                  label(for="image-upload", id="image-label") 
                  input(type='file',  id="image-upload" name="imgLocal", accept='image/*' )
          li
            .add-title
              p Add a title
                input#input-title(type='text', name="title")
          li
            .add-description
              p Add a description
              input#input-description(type='text', name="description" )
          li
            .add-price
              p Add a price
              input#input-price(type='number', name="price")
          li
            div
              p Select a category
              select(name="category")
                option(value='cars') Cars
                option(value='home') Home
                option(value='beauty') Beauty
                option(value='electronics') Electronics
                option(value='sport') Sport
                option(value='music') Music
                option(value='forniture') Forniture
                option(value='consoles and videogames') Consoles and videogames 
                option(value='books') Books
                option(value='fashion') Fashion
                option(value='animals') Animals
                option(value='real state') Real State
          li
            div
                input.custom-btn(type='submit', value='Send')
      .preview-data
        .card-preview
          #image-preview.card-image-preview
          .card-body.card-body-add-page
            p#preview-price
            p#preview-title
            p.card-text#preview-description         
            .user-card
              .img-user-card
                img.img-circle(src='http://via.placeholder.com/50x50')
              .user-info
                p User
                p 15 products
            .tag
              p Tag
            
