extends ../layout

block content
  .detail
    .container
      .row
        .col-12.col-lg-10.lg-auto.product-detail
          img(src=product.imgUrl)
          .content-detail
            .product-content-detail
             if (user._id.toString() != product.createdBy._id.toString())
              h4.heart-icon-container#wish-btn=product.price + ' €'
                i.heart-icon(data-id=product._id)
             else
              h4.heart-icon-container#deal-btn=product.price + ' €'
                i.deal-icon(data-id=product._id)
              h6.title-detail=product.title
              p.description-detail=product.description
            .user-location-detail-product
              p
                i.fa.fa-map-marker(aria-hidden='true')
                |  #{product.createdBy.city}
              p=`Created: ${moment(product.createdAt).format('DD-MM-YYYY')}`
            .user-detail
              a(href=`/profile/${product.createdBy._id}`)
                img.img-circle(src=product.createdBy.avatarUrl)
              .description-user-detail
                p=product.createdBy.username
            .custom-btn.contact-detail
              a(href=`/contact/${product.createdBy._id}`) Contact




          
      