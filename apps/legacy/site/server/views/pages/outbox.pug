extends ../layout

block content
  .container.mail-box
    h3 Outbox Messages
    p.trash-p#remove-message-btn
      i.fa.fa-trash(aria-hidden='true')
    .div-button-mail.outbox
     if (usersReceptors)
      each message, index in user.sentMessages
        a.user-card-mail(href=`/mail/message/${message._id}`)
          .img-user-card
            img(src=usersReceptors[index].avatarUrl)
          .user-info
            p 
              span To:
              | #{usersReceptors[index].username}
            p
              span Subject: 
              | #{message.subject} 
            p=`Created: ${moment(message.createdAt).format('DD-MM-YYYY')}`
          .trash-div
            input(type='checkbox', name='', value=message._id)