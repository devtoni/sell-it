extends ../layout

block content
  .container.mail-box
    h3 Inbox Messages
    p.trash-p
      i.fa.fa-trash(aria-hidden='true')
    .div-button-mail.outbox
     if (usersSentby)
      each message, index in user.receivedMessages
        a.user-card-mail(href=`/mail/message/${message._id}`)
          .img-user-card
            img(src=usersSentby[index].avatarUrl)
          .user-info
            p 
              span To:
              | #{usersSentby[index].username}
            p
              span Subject: 
              | #{message.subject} 
            p=`Created: ${moment(message.createdAt).format('DD-MM-YYYY')}`
          .trash-div
           input(type='checkbox', name='', value=message._id)